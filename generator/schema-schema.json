{
  "$id": "ability-attributes-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "AttributeEntry": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_-]*$"
        },
        "value": {
          "anyOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "string"
            }
          ]
        },
        "optional": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "type": "object"
    },
    "AttributeInAssumption": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_-]*$"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "type": "object"
    },
    "AttributeInParameter": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_-]*$"
        },
        "constraints": {
          "items": {
            "anyOf": [
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintEntries"
              },
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintRef"
              }
            ]
          },
          "type": "array"
        },
        "value": {
          "items": {
            "$ref": "ability-attributes-schema#/definitions/ParameterValue"
          },
          "type": "array"
        },
        "optional": {
          "type": "boolean"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "AttributeRef": {
      "additionalProperties": false,
      "properties": {
        "ref": {
          "type": "string"
        }
      },
      "required": [
        "ref"
      ],
      "type": "object"
    },
    "Attributes": {
      "patternProperties": {
        "^\\$[A-Za-z_][A-Za-z0-9_-]+$": {
          "anyOf": [
            {
              "$ref": "ability-attributes-schema#/definitions/AttributeEntry"
            },
            {
              "additionalProperties": false,
              "properties": {
                "one": {
                  "items": {
                    "$ref": "ability-attributes-schema#/definitions/AttributeEntry"
                  },
                  "type": "array"
                }
              },
              "required": [
                "one"
              ],
              "type": "object"
            }
          ]
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Class": {
      "additionalProperties": false,
      "properties": {
        "assumptions": {
          "items": {
            "anyOf": [
              {
                "additionalProperties": false,
                "properties": {
                  "attributes": {
                    "items": {
                      "$ref": "#/definitions/AttributeInAssumption"
                    },
                    "type": "array"
                  },
                  "tag": {
                    "type": "string",
                    "pattern": "^\\s*\\<\\s*[a-z][a-z0-9_-]*\\s*\\>\\s*$"

                  }
                },
                "required": [
                  "attributes",
                  "tag"
                ],
                "type": "object"
              },
              {
                "additionalProperties": false,
                "properties": {
                  "tag": {
                    "type": "string",
                    "pattern": "^\\s*\\<\\s*[a-z][a-z0-9_-]*\\s*\\>\\s*$"
                  }
                },
                "required": [
                  "tag"
                ],
                "type": "object"
              },
              {
                "additionalProperties": false,
                "properties": {
                  "attributes": {
                    "items": {
                      "$ref": "#/definitions/AttributeInAssumption"
                    },
                    "type": "array"
                  }
                },
                "required": [
                  "attributes"
                ],
                "type": "object"
              }
            ]
          },
          "type": "array"
        },
        "constraints": {
          "items": {
            "anyOf": [
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintEntries"
              },
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintRef"
              }
            ]
          },
          "type": "array"
        },
        "parameters": {
          "items": {
            "anyOf": [
              {
                "$ref": "ability-attributes-schema#/definitions/ParameterInClassEntry"
              },
              {
                "$ref": "ability-attributes-schema#/definitions/ParameterRefRel"
              },
              {
                "additionalProperties": false,
                "properties": {
                  "one": {
                    "items": {
                      "$ref": "ability-attributes-schema#/definitions/ParameterEntry"
                    },
                    "type": "array"
                  },
                  "optional": {
                    "$ref": "ability-attributes-schema#/definitions/ParameterOptional"
                  }
                },
                "required": [
                  "one"
                ],
                "type": "object"
              }
            ]
          },
          "type": "array"
        },
        "tags": {
          "type": "object",
          "patternProperties": {
            "^\\s*\\<\\s*[a-z][a-z0-9_-]*\\s*\\>\\s*(,\\s*\\<\\s*[a-z][a-z0-9_-]*\\s*\\>\\s*)*$": {
              "$ref": "ability-attributes-schema#/definitions/Tag"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "tags"
      ],
      "type": "object"
    },
    "Classes": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "$ref": "ability-attributes-schema#/definitions/Class"
        }
      },
      "additionalProperties": false
    },
    "ConstraintEntry": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "description": {
              "type": "string"
            },
            "xpath": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "xpath"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "description": {
              "type": "string"
            },
            "js": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "js"
          ],
          "type": "object"
        }
      ]
    },
    "ConstraintEntries": {
      "anyOf": [
        {
          "$ref": "ability-attributes-schema#/definitions/ConstraintEntry"
        },
        {
          "additionalProperties": false,
          "properties": {
            "one": {
              "items": {
                "$ref": "ability-attributes-schema#/definitions/ConstraintEntry"
              },
              "type": "array"
            }
          },
          "required": [
            "one"
          ],
          "type": "object"
        }
      ]
    },
    "ConstraintRef": {
      "additionalProperties": false,
      "properties": {
        "ref": {
          "type": "string"
        }
      },
      "required": [
        "ref"
      ],
      "type": "object"
    },
    "Constraints": {
      "additionalProperties": false,
      "patternProperties": {
        "^\\$[A-Za-z_][A-Za-z0-9_-]+$": {
          "$ref": "ability-attributes-schema#/definitions/ConstraintEntries"
        }
      },
      "type": "object"
    },
    "ParameterEntry": {
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "items": {
            "$ref": "#/definitions/AttributeInParameter"
          },
          "type": "array"
        },
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        }
      },
      "required": [
        "attributes",
        "name"
      ],
      "type": "object"
    },
    "ParameterInClassEntry": {
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "items": {
            "$ref": "#/definitions/AttributeInParameter"
          },
          "type": "array"
        },
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        },
        "optional": {
          "$ref": "ability-attributes-schema#/definitions/ParameterOptional"
        }
      },
      "required": [
        "attributes",
        "name"
      ],
      "type": "object"
    },
    "ParameterOptional": {
      "anyOf": [
        {
          "$ref": "ability-attributes-schema#/definitions/ConstraintEntries"
        },
        {
          "$ref": "ability-attributes-schema#/definitions/ConstraintRef"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "ParameterRef": {
      "additionalProperties": false,
      "properties": {
        "optional": {
          "$ref": "ability-attributes-schema#/definitions/ParameterOptional"
        },
        "ref": {
          "type": "string"
        }
      },
      "required": [
        "ref"
      ],
      "type": "object"
    },
    "ParameterRel": {
      "additionalProperties": false,
      "properties": {
        "rel": {
          "type": "string",
          "pattern": "^@[A-Za-z_][A-Za-z0-9_-]+$"
        }
      },
      "required": [
        "rel"
      ],
      "type": "object"
    },
    "ParameterRefRel": {
      "anyOf": [
        {
          "$ref": "ability-attributes-schema#/definitions/ParameterRef"
        },
        {
          "$ref": "ability-attributes-schema#/definitions/ParameterRel"
        }
      ]
    },
    "ParameterValue": {
      "additionalProperties": false,
      "properties": {
        "attribute": {
          "type": [
            "string",
            "boolean"
          ]
        },
        "parameter": {
          "type": [
            "null",
            "string",
            "number",
            "boolean"
          ]
        }
      },
      "required": [
        "attribute",
        "parameter"
      ],
      "type": "object"
    },
    "Parameters": {
      "patternProperties": {
        "^\\$[A-Za-z_][A-Za-z0-9_-]+$": {
          "anyOf": [
            {
              "$ref": "ability-attributes-schema#/definitions/ParameterEntry"
            },
            {
              "additionalProperties": false,
              "properties": {
                "one": {
                  "items": {
                    "$ref": "ability-attributes-schema#/definitions/ParameterEntry"
                  },
                  "type": "array"
                }
              },
              "required": [
                "one"
              ],
              "type": "object"
            }
          ]
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Tag": {
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "items": {
            "anyOf": [
              {
                "$ref": "ability-attributes-schema#/definitions/AttributeEntry"
              },
              {
                "additionalProperties": false,
                "properties": {
                  "one": {
                    "items": {
                      "$ref": "ability-attributes-schema#/definitions/AttributeEntry"
                    },
                    "type": "array"
                  }
                },
                "required": [
                  "one"
                ],
                "type": "object"
              },
              {
                "$ref": "ability-attributes-schema#/definitions/AttributeRef"
              }
            ]
          },
          "type": "array"
        },
        "constraints": {
          "items": {
            "anyOf": [
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintEntries"
              },
              {
                "$ref": "ability-attributes-schema#/definitions/ConstraintRef"
              }
            ]
          },
          "type": "array"
        },
        "parameters": {
          "additionalProperties": false,
          "patternProperties": {
            "^@[A-Za-z_][A-Za-z0-9_-]+$": {
              "anyOf": [
                {
                  "$ref": "ability-attributes-schema#/definitions/ParameterInClassEntry"
                },
                {
                  "$ref": "ability-attributes-schema#/definitions/ParameterRef"
                },
                {
                  "additionalProperties": false,
                  "properties": {
                    "one": {
                      "items": {
                        "$ref": "ability-attributes-schema#/definitions/ParameterEntry"
                      },
                      "type": "array"
                    },
                    "optional": {
                      "$ref": "ability-attributes-schema#/definitions/ParameterOptional"
                    }
                  },
                  "required": [
                    "one"
                  ],
                  "type": "object"
                }
              ]
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "attributes": {
      "$ref": "ability-attributes-schema#/definitions/Attributes"
    },
    "classes": {
      "$ref": "ability-attributes-schema#/definitions/Classes"
    },
    "constraints": {
      "$ref": "ability-attributes-schema#/definitions/Constraints"
    },
    "namespace": {
      "type": "string",
      "pattern": "^[A-Za-z_][A-Za-z0-9_-]*$"
    },
    "parameters": {
      "$ref": "ability-attributes-schema#/definitions/Parameters"
    },
    "version": {
      "type": "string",
      "pattern": "^1\\.0$"
    }
  },
  "required": [
    "classes",
    "version"
  ],
  "type": "object"
}